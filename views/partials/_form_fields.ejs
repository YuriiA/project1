<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>

<div class="form-group">
  <select
    name="region"
    class="form-select mt-3"
    aria-label="Default select example"
  >
    <option disabled selected value>---Select a destination---</option>
    <option value="asia">Asia</option>
    <option value="europe">Europe</option>
    <option value="africa">Africa</option>
    <option value="america">America</option>
  </select>
</div>

<div class="form-group">
  <label class="mt-3" for="img">Img link</label>
  <input
    required
    value="https://picsum.photos/600/300"
    type="text"
    name="img"
    id="img"
    class="form-control"
  />
</div>
<div class="form-group">
  <label class="mt-3" for="description">Description</label>
  <textarea required name="description" id="description" class="form-control">
<%= article.description %></textarea
  >
  <a href="/" class="btn btn-outline-secondary mt-3">Cancel</a>
  <button type="submit" class="btn btn-outline-primary mt-3">Save</button>
</div>
